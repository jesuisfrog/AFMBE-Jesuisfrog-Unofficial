<div class="item-attribute-sidebar">
    <h2>Attributes</h2>
    <table>
        <tbody>
            {{#if notAspect}}
                <tr>
                    <th>Cost</th>
                    <td><input type="number" name="system.cost" value="{{item.system.cost}}"></td>
                </tr>
                <tr>
                    <th>Test Bonus</th>
                    <td><input type="number" name="system.bonus" value="{{item.system.bonus}}"></td>
                </tr>
            
            {{/if}}
            {{#unless notAspect}}
                <tr>
                    <th>Power</th>
                    <td><input type="number" name="system.power" value="{{item.system.power}}"></td>
                </tr>
            {{/unless}}
            <tr>
                <th>HP+</th>
                <td><input type="number" name="system.resource_bonus.hp" value="{{item.system.resource_bonus.hp}}"></td>
            </tr>
            <tr>
                <th>Endurance+</th>
                <td><input type="number" name="system.resource_bonus.endurance_points"
                        value="{{item.system.resource_bonus.endurance_points}}"></td>
            </tr>
            <tr>
                <th>Speed+</th>
                <td><input type="number" name="system.resource_bonus.speed"
                        value="{{item.system.resource_bonus.speed}}"></td>
            </tr>
            <tr>
                <th>Essence+</th>
                <td><input type="number" name="system.resource_bonus.essence"
                        value="{{item.system.resource_bonus.essence}}"></td>
            </tr>
            <tr>
                <th>Initiative+</th>
                <td><input type="number" name="system.resource_bonus.initiative"
                        value="{{item.system.resource_bonus.initiative}}"></td>
            </tr>
        </tbody>
    </table>
</div>